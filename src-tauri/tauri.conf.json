{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Acquacotta",
  "version": "0.1.0",
  "identifier": "com.github.fatherlinux.acquacotta",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Acquacotta",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "notification": {
      "all": true
    },
    "store": {},
    "dialog": {
      "all": true
    },
    "shell": {
      "open": true
    }
  }
}
